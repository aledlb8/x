{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2016",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    /* Transpiling with TypeScript */
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "dist",
    "baseUrl": "src",
    /* Additional Compiler Options */
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    /* Import Options */
    "allowSyntheticDefaultImports": true,
  },
  /* Library-Specific Options (if applicable) */
  "declaration": true, // If building for a library
  "composite": true, // If building for a library in a monorepo
  "declarationMap": true, // If building for a library in a monorepo
  "sourceMap": true, // If building for a library in a monorepo
  /* DOM-Specific Options (choose one based on your project) */
  "lib": [
    "es2022",
    "dom",
    "dom.iterable"
  ], // If your code runs in the DOM
  // "lib": ["es2022"]  // If your code doesn't run in the DOM
}